# Azure Resource Configuration for TAXII Testing
# Copy to test.config and fill in your values
SUBSCRIPTION_ID="your-subscription-id"
RESOURCE_GROUP="your-resource-group"
WORKSPACE_NAME="your-sentinel-workspace"
LOCATION="northeurope"

# TAXII Server Settings
TAXII_SERVER_URL="https://platform.socradar.com/taxii2"
COLLECTION_ID="your-collection-id"
TAXII_USERNAME="your-company-id"

# Polling Settings
POLLING_INTERVAL_MINUTES="15"
MIN_CONFIDENCE="0"
MAX_PAGES_PER_RUN="100"

# Audit Logging (requires Infrastructure template)
ENABLE_AUDIT_LOGGING="false"
